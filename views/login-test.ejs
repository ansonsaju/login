<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Test</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
        }
        input, button {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            font-size: 16px;
        }
        #status {
            padding: 10px;
            margin: 10px 0;
            border-radius: 4px;
        }
        .error { background: #ffcccc; color: #cc0000; }
        .success { background: #ccffcc; color: #00cc00; }
        .info { background: #cce5ff; color: #0066cc; }
    </style>
</head>
<body>
    <h1>Login Test</h1>
    
    <div id="status" class="info">Ready to test</div>
    
    <input type="email" id="email" placeholder="Email" value="admin@dashboard.com">
    <input type="password" id="password" placeholder="Password" value="Admin@123">
    <button onclick="testLogin()">Test Login</button>
    
    <div id="logs" style="margin-top: 20px; padding: 10px; background: #f5f5f5; font-family: monospace; font-size: 12px;"></div>
    
    <script>
        function log(message) {
            const logsDiv = document.getElementById('logs');
            const time = new Date().toLocaleTimeString();
            logsDiv.innerHTML += `[${time}] ${message}<br>`;
            console.log(message);
        }
        
        log('Script loaded');
        
        async function testLogin() {
            const statusDiv = document.getElementById('status');
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            log(`Starting login test with: ${email}`);
            statusDiv.className = 'info';
            statusDiv.textContent = 'Testing...';
            
            try {
                log('Creating fetch request...');
                
                const response = await fetch('/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ 
                        email: email,
                        password: password
                    }),
                });
                
                log(`Response received: ${response.status} ${response.statusText}`);
                
                const contentType = response.headers.get('content-type');
                log(`Content-Type: ${contentType}`);
                
                const data = await response.json();
                log(`Response data: ${JSON.stringify(data)}`);
                
                if (data.success) {
                    statusDiv.className = 'success';
                    statusDiv.textContent = 'SUCCESS! Login worked!';
                    log('Login successful! Will redirect in 2 seconds...');
                    
                    setTimeout(() => {
                        log('Redirecting to /dashboard');
                        window.location.href = '/dashboard';
                    }, 2000);
                } else {
                    statusDiv.className = 'error';
                    statusDiv.textContent = 'FAILED: ' + data.message;
                    log(`Login failed: ${data.message}`);
                }
            } catch (error) {
                statusDiv.className = 'error';
                statusDiv.textContent = 'ERROR: ' + error.message;
                log(`Error: ${error.message}`);
                log(`Stack: ${error.stack}`);
            }
        }
        
        // Allow Enter key to submit
        document.getElementById('password').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                log('Enter key pressed');
                testLogin();
            }
        });
    </script>
</body>
</html>
